<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera feature -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SIHProjectPrototypeBhasaMitra"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <activity
            android:name="com.example.sihprojectprototypebhasamitra.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SIHProjectPrototypeBhasaMitra">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Remove or comment out this CameraXForegroundService line -->
        <!-- It is internal to CameraX and should NOT be manually declared -->
        <!--
        <service
            android:name="androidx.camera.core.impl.CameraXForegroundService"
            android:foregroundServiceType="camera"
            tools:node="merge" />
        -->

    </application>

</manifest>
